<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Prove 01 | users</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <h1>Registered Users</h1>
    <p>Not seeing your name on the list? <a href="/">Sign up now!</a></p>
    <hr/>
    <table>
      <thead>
        <tr>
          <th>Registration ID</th>
          <th>Username</th>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user){ %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= user.username %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.firstName %>
            </td>
            <td>
              <%= user.lastName %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
